  METHOD PUBLIC STATIC VOID SetSeriLogSettings(configuration AS Configuration):
    DEFINE VARIABLE addTestingLogger AS LOGICAL NO-UNDO.
    DEFINE VARIABLE addPerformanceLogging AS LOGICAL NO-UNDO.
